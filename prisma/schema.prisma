generator client {
  provider = "prisma-client-js"
}

datasource postgresql {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model dog {
  id          Int      @id @default(autoincrement())
  bred_for    String?
  breed_group String?
  height      Json?
  life_span   String?
  name        String?
  origin      String?
  temperament String?
  weight      Json?
  dog_user_id Int
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
  dog_user    dog_user @relation(fields: [dog_user_id], references: [id])

  @@index([bred_for], name: "index_dog_on_bred_for")
  @@index([breed_group], name: "index_dog_on_breed_group")
  @@index([height], name: "index_dog_on_height")
  @@index([life_span], name: "index_dog_on_life_span")
  @@index([name], name: "index_dog_on_name")
  @@index([origin], name: "index_dog_on_origin")
  @@index([temperament], name: "index_dog_on_temperament")
  @@index([weight], name: "index_dog_on_weight")
  @@index([dog_user_id], name: "index_dog_on_dog_user_id")
  @@index([created_at], name: "index_dog_on_created_at")
  @@index([updated_at], name: "index_dog_on_updated_at")
}

model dog_images {
  id          Int      @id @default(autoincrement())
  url         String?
  dog_user_id Int
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now())
  width       Json?
  height      Json?
  dog_user    dog_user @relation(fields: [dog_user_id], references: [id])

  @@index([url], name: "index_dog_images_on_url")
  @@index([width], name: "index_dog_images_on_width")
  @@index([height], name: "index_dog_images_on_height")
  @@index([dog_user_id], name: "index_dog_images_on_dog_user_id")
  @@index([created_at], name: "index_dog_images_on_created_at")
  @@index([updated_at], name: "index_dog_images_on_updated_at")
}

model dog_user {
  id         Int          @id @default(autoincrement())
  email      String
  password   String
  created_at DateTime     @default(now())
  updated_at DateTime     @default(now())
  dogs       dog[]
  dog_images dog_images[]

  @@index([email], name: "index_dog_user_on_email")
  @@index([password], name: "index_dog_user_on_password")
  @@index([created_at], name: "index_dog_user_on_created_at")
  @@index([updated_at], name: "index_dog_user_on_updated_at")
}
